{
  "name": "simple-pomodoro-timer",
  "displayName": "Simple Pomodoro Timer",
  "description": "simple pomodoro timer",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Simple Pomodoro Timer",
        "properties": {
          "simple-pomodoro-timer.defaultWorkingTime": {
            "type": "number",
            "default": 25,
            "description": "This is the default working time set for the pomodoro timer. The unit of time is minutes."
          },
          "simple-pomodoro-timer.defaultShortBreakTime": {
            "type": "number",
            "default": 5,
            "description": "This is the default short break time set for the pomodoro timer. The unit of time is minutes."
          },
          "simple-pomodoro-timer.defaultLongBreakTime": {
            "type": "number",
            "default": 15,
            "description": "This is the default long break time set for the pomodoro timer. The unit of time is minutes."
          },
          "simple-pomodoro-timer.bellNameAtEndOfNormalWorking": {
            "type": "string",
            "default": "marimba02.mp3",
            "description": "Audio file name of the bell at the end of the normal working."
          },
          "simple-pomodoro-timer.bellNameAtEndOfFourthWorking": {
            "type": "string",
            "default": "pulse01.mp3",
            "description": "Audio file name of the bell at the end of the fourth working."
          },
          "simple-pomodoro-timer.bellNameAtEndOfBreak": {
            "type": "string",
            "default": "cymbal01.mp3",
            "description": "Audio file name of the bell at the end of the break."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "pomodoro-timer.startTimer",
        "title": "Start Timer",
        "category": "Simple Pomodoro"
      },
      {
        "command": "pomodoro-timer.startTimerOnCurrentLine",
        "title": "Start Timer for task at current line",
        "category": "Simple Pomodoro"
      },
      {
        "command": "pomodoro-timer.stopTimer",
        "title": "Stop Timer",
        "category": "Simple Pomodoro"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json}'",
    "test": "node ./out/test/runTest.js",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^10.0.1",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "prettier": "^3.4.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "sound-play": "^1.1.0"
  }
}
