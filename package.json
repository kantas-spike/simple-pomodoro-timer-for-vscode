{
  "name": "simple-pomodoro-timer",
  "displayName": "Simple Pomodoro Timer",
  "description": "simple pomodoro timer",
  "publisher": "kantas-spike",
  "author": {
    "name": "kantas-spike"
  },
  "license": "MIT",
  "repository": "github:kantas-spike/simple-pomodoro-timer",
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "startPomodoroTimer",
        "required": [
          "taskName"
        ],
        "properties": {
          "taskName": {
            "type": "string",
            "description": "„Çø„Ç§„Éû„ÉºÈñãÂßãÊôÇ„ÅÆÈÄöÁü•„É°„ÉÉ„Çª„Éº„Ç∏„Å´Ë°®Á§∫„Åô„Çã„Çø„Çπ„ÇØÂêç"
          },
          "projectName": {
            "type": "string",
            "description": "„Çø„Ç§„Éû„ÉºÈñãÂßãÊôÇ„ÅÆÈÄöÁü•„É°„ÉÉ„Çª„Éº„Ç∏„Å´Ë°®Á§∫„Åô„Çã„Éó„É≠„Ç∏„Çß„ÇØ„ÉàÂêç"
          }
        }
      },
      {
        "type": "stopPomodoroTimer",
        "properties": {
          "reason": {
            "type": "string",
            "description": "„Çø„Ç§„Éû„Éº„ÇíÂÅúÊ≠¢„Åô„ÇãÁêÜÁî±"
          }
        }
      }
    ],
    "configuration": [
      {
        "title": "Simple Pomodoro Timer",
        "properties": {
          "simple-pomodoro-timer.defaultWorkingTime": {
            "type": "number",
            "default": 25,
            "description": "This is the default working time set for the pomodoro timer. The unit of time is minutes."
          },
          "simple-pomodoro-timer.defaultShortBreakTime": {
            "type": "number",
            "default": 5,
            "description": "This is the default short break time set for the pomodoro timer. The unit of time is minutes."
          },
          "simple-pomodoro-timer.defaultLongBreakTime": {
            "type": "number",
            "default": 15,
            "description": "This is the default long break time set for the pomodoro timer. The unit of time is minutes."
          },
          "simple-pomodoro-timer.audioDir": {
            "type": "string",
            "default": null,
            "description": "Path to the directory containing the audio files. if null, audioDir is `${extensionPath}/audio`."
          },
          "simple-pomodoro-timer.bellNameAtEndOfNormalWorking": {
            "type": "string",
            "default": "marimba02.mp3",
            "description": "Audio file name of the bell at the end of the normal working."
          },
          "simple-pomodoro-timer.bellNameAtEndOfFourthWorking": {
            "type": "string",
            "default": "pulse01.mp3",
            "description": "Audio file name of the bell at the end of the fourth working."
          },
          "simple-pomodoro-timer.bellNameAtEndOfBreak": {
            "type": "string",
            "default": "cymbal01.mp3",
            "description": "Audio file name of the bell at the end of the break."
          },
          "simple-pomodoro-timer.timerIconForWorking": {
            "type": "string",
            "default": "üçÖ",
            "description": "Timer icon for working."
          },
          "simple-pomodoro-timer.timerIconForBreak": {
            "type": "string",
            "default": "ü•î",
            "description": "Timer icon for break."
          },
          "simple-pomodoro-timer.statusbarAlignment": {
            "type": "string",
            "default": "right",
            "description": "Set the position (left or right) to place the timer on the status bar."
          },
          "simple-pomodoro-timer.statusbarPriority": {
            "type": "number",
            "default": -100,
            "description": "The priority of displaying the timer in the status bar. A higher value means the item will appear further to the left."
          },
          "simple-pomodoro-timer.delayTimeWhenSwitchTimer": {
            "type": "number",
            "default": 3,
            "description": "Delay time(sec) when switching timers."
          },
          "simple-pomodoro-timer.startMessageFormat": {
            "type": "string",
            "default": "@time@ [start] @@projectName@ @taskName@",
            "description": "Notification message format when timer started."
          },
          "simple-pomodoro-timer.stopMessageFormat": {
            "type": "string",
            "default": "@time@ [stop ] @@projectName@ @taskName@(@timerIconForWorking@x@cycleCount@ + @wipTime@) @message@",
            "description": "Notification message format when timer stopped."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json}'",
    "test": "node ./out/test/runTest.js",
    "test-cli": "npm run compile && npx vscode-test",
    "coverage": "npm run compile && npx vscode-test --coverage --coverage-output ./.coverage --coverage-reporter html --coverage-reporter text",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^10.0.1",
    "generator-license": "^5.7.1",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "prettier": "^3.4.2",
    "sinon": "^19.0.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "sound-play": "^1.1.0"
  }
}
